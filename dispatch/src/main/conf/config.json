{
  "namespace": "example",
  "port": 9000,
  "bodyLimit":  1024,
  "cors" : {

  },
  "http": {
    "compressionLevel":6,
    "compressionSupported" : false
  },
  "api.discovery" : {
    "name" : "example",
    "publishedAddress" : "__com.github.edgar615.gateway.api.published",
    "unpublishedAddress" : "__com.github.edgar615.gateway.api.unpublished"
  },
  "service.discovery" : {
    "announceAddress": "vertx.discovery.announce",
    "usageAddress" : "vertx.discovery.usage",
    "name": "service-discovery"
  },
  "load.balance" : {
    "strategy": {
      "user": "random",
      "device": "round_robin"
    }
  },
  "circuit.breaker": {
    "maxFailures": 5,
    "maxRetries": 0,
    "resetTimeout": 60000,
    "timeout": 3000,
    "metricsRollingWindow": 10000,
    "notificationPeriod": 2000,
    "notificationAddress": "vertx.circuit-breaker",
    "registry": "vertx.circuit.breaker.registry"
  },
  "jwt.builder": {
    "expiresInSeconds" : 3600,
    "emptyingField" : true
  },
  "user" : {
    "url" : "/users",
    "cache": {
      "type" : "local",
      "expireAfterWrite": 3600,
      "maximumSize": 5000
    }
  },
  "timeout": {
    "expires": 300,
    "enable": false
  },
  "strict.arg": {
    "enable": true,
    "query.excludes": [
      "appKey",
      "sign",
      "signMethod",
      "v",
      "nonce",
      "timestamp"
    ],
    "body.excludes": []
  },
  "appkey": {
    "data": [
      {
        "appKey": "RmOI7jCvDtfZ1RcAkea1",
        "appSecret": "dbb0f95c8ebf4317942d9f5057d0b38e",
        "clientCode": 0,
        "permissions": ["all"]
      }
    ],
    "url": "/appkey/import",
    "cache": {
      "type": "local"
    }
  },
  "appKey.restriction" : {
    "blacklist": ["YM2ILRYlK5GUpheJh63K"],
    "whitelist": ["AEA3C65BFFCDC720AF5"]
  },
  "request.transformer": {
    "query.remove": [
      "appKey",
      "nonce",
      "v",
      "timestamp",
      "signMethod",
      "sign"
    ]
  },
  "rate.limiter": {
    "user_limiter": {
      "key": "$user.userId",
      "limit": 3,
      "interval": 2,
      "unit": "SECONDS"
    }
  }
}