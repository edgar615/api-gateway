{
  "name": "device.list.1.0.0",
  "method": "GET",
  "path": "/devices",
  "authentication": true,
  "scope": "device:read",
  "appkey": true,
  "app_code_vertify": true,
  "url.arg": [
    {
      "name": "limit",
      "default_value": 10,
      "rules": {
        "integer": true,
        "max": 100,
        "min": 1
      }
    },
    {
      "name": "start",
      "default_value": 0,
      "rules": {
        "integer": true
      }
    },
    {
      "name": "type",
      "rules": {
        "integer": true
      }
    },
    {
      "name": "isVirtual",
      "rules": {
        "optional": [
          "true",
          "false"
        ]
      }
    },
    {
      "name": "isOnline",
      "rules": {
        "optional": [
          "true",
          "false"
        ]
      }
    },
    {
      "name": "addOnStart",
      "rules": {
        "integer": true
      }
    },
    {
      "name": "addOnEnd",
      "rules": {
        "integer": true
      }
    }
  ],
  "endpoints": [
    {
      "service": "device",
      "method": "GET",
      "name": "query_device",
      "type": "http",
      "path": "/devices"
    }
  ],
  "request.transformer": [
    {
      "name": "query_device",
      "query.add": [
        "userId:$user.userId"
      ],
      "header.add": [
        "x-auth-userId:$user.userId",
        "x-auth-companyCode:$user.companyCode",
        "x-policy-owner:individual"
      ]
    }
  ]
}