{
  "name": "part.update.1.0.0",
  "method": "PUT",
  "path": "/parts/(\\d+)",
  "authentication": true,
  "scope": "device:write",
  "appkey": true,
  "app_code_vertify": true,
  "body.arg": [
    {
      "name": "name",
      "rules": {
        "maxLength": 64
      }
    },
    {
      "name": "users",
      "rules": {
        "maxLength": 64
      }
    },
    {
      "name": "location",
      "rules": {
        "maxLength": 64
      }
    },
    {
      "name": "masterUnDefend",
      "rules": {
        "bool": true
      }
    },
    {
      "name": "masterAwayDefend",
      "rules": {
        "bool": true
      }
    },
    {
      "name": "masterHomeDefend",
      "rules": {
        "bool": true
      }
    },
    {
      "name": "sirenDuration",
      "rules": {
        "integer": true,
        "min": 0,
        "max": 1800
      }
    },
    {
      "name": "sirenVolume",
      "rules": {
        "integer": true,
        "min": 0,
        "max": 3
      }
    },
    {
      "name": "lightSwitch",
      "rules": {
        "bool": true
      }
    },
    {
      "name": "sirenSwitch",
      "rules": {
        "bool": true
      }
    },
    {
      "name": "warningDirection",
      "rules": {
        "integer": true,
        "optional": [
          1,
          2
        ]
      }
    }
  ],
  "endpoints": [
    {
      "service": "device",
      "method": "PUT",
      "name": "update_part",
      "type": "http",
      "path": "/parts/$var.param0"
    }
  ],
  "request.transformer": [
    {
      "name": "update_part",
      "body.add": [
        "userId:$user.userId"
      ],
      "header.add": [
        "x-auth-userId:$user.userId",
        "x-auth-companyCode:$user.companyCode",
        "x-policy-owner:individual"
      ]
    }
  ]
}