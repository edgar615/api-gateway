{
  "name": "cateye.add.1.0.0",
  "method": "POST",
  "path": "/devices/cateye",
  "authentication": true,
  "scope": "device:write",
  "appkey": true,
  "app_code_vertify": true,
  "body.arg": [
    {
      "name": "deviceUuid",
      "rules": {
        "required": true,
        "maxLength": 64
      }
    },
    {
      "name": "secretKey",
      "rules": {
        "required": true,
        "regex": "[0-9A-F]{8}"
      }
    }
  ],
  "endpoints": [
    {
      "service": "device",
      "method": "POST",
      "name": "add_cateye",
      "type": "http",
      "path": "/devices/cateye"
    }
  ],
  "request.transformer": [
    {
      "name": "add_cateye",
      "body.add": [
        "userId:$user.userId",
        "username:$user.username",
        "companyCode:$user.companyCode"
      ],
      "header.add": [
        "x-auth-userId:$user.userId",
        "x-auth-companyCode:$user.companyCode",
        "x-policy-owner:individual"
      ]
    }
  ]
}