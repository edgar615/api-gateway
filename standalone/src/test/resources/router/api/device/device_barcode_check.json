{
  "name": "device.barcode.check.1.0.0",
  "method": "GET",
  "path": "/devices/barcode/(\\w+)",
  "authentication": true,
  "scope": "device:read",
  "appkey": true,
  "app_code_vertify": true,
  "endpoints": [
    {
      "service": "device",
      "method": "GET",
      "name": "get_device",
      "type": "http",
      "path": "/devices/barcode/$var.param0"
    }
  ],
  "request.transformer": [
    {
      "name": "get_device",
      "header.add": [
        "x-auth-userId:$user.userId",
        "x-auth-companyCode:$user.companyCode",
        "x-policy-owner:individual"
      ]
    }
  ]
}