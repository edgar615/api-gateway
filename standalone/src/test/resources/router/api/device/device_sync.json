{
  "name": "device.sync.1.0.0",
  "method": "POST",
  "path": "/devices/(\\d+)/sync",
  "authentication": true,
  "scope": "device:write",
  "appkey": true,
  "app_code_vertify": true,
  "endpoints": [
    {
      "service": "device",
      "method": "POST",
      "name": "sync_device",
      "type": "http",
      "path": "/devices/$var.param0/sync"
    }
  ],
  "request.transformer": [
    {
      "name": "sync_device",
      "header.add": [
        "x-auth-userId:$user.userId",
        "x-auth-companyCode:$user.companyCode",
        "x-policy-owner:individual"
      ]
    }
  ]
}