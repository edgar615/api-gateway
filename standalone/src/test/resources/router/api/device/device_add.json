{
  "name": "device.add.1.0.0",
  "method": "POST",
  "path": "/devices",
  "authentication": true,
  "scope": "device:write",
  "appkey": true,
  "app_code_vertify": true,
  "body.arg": [
    {
      "name": "encryptKey",
      "rules": {
        "required": true,
        "regex": "[0-9A-F]{16}"
      }
    },
    {
      "name": "type",
      "rules": {
        "required": true,
        "optional": [
          1,
          2,
          3
        ]
      }
    },
    {
      "name": "barcode",
      "rules": {
        "required": true,
        "regex": "[0-9a-zA-Z]{16}"
      }
    },
    {
      "name": "serverAddress"
    },
    {
      "name": "macAddress",
      "rules": {
        "required": true,
        "regex": "[0-9a-fA-F]{12}"
      }
    }
  ],
  "endpoints": [
    {
      "service": "device",
      "method": "POST",
      "name": "add_device",
      "type": "http",
      "path": "/devices"
    }
  ],
  "request.transformer": [
    {
      "name": "add_device",
      "body.add": [
        "userId:$user.userId",
        "username:$user.username",
        "companyCode:$user.companyCode"
      ],
      "header.add": [
        "x-auth-userId:$user.userId",
        "x-auth-companyCode:$user.companyCode",
        "x-policy-owner:individual"
      ]
    }
  ]
}