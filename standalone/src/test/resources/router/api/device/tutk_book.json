{
  "name": "tutk.book.1.0.0",
  "method": "POST",
  "path": "/tutk/book",
  "authentication": true,
  "scope": "device:write",
  "appkey": true,
  "app_code_vertify": true,
  "body.arg": [
    {
      "name": "macAddress",
      "rules": {
        "required": true,
        "regex": "[0-9a-fA-F]{12}"
      }
    }
  ],
  "endpoints": [
    {
      "service": "device",
      "method": "PUT",
      "name": "tutk_book",
      "type": "http",
      "path": "/devices/tutk/book"
    }
  ],
  "request.transformer": [
    {
      "name": "tutk_book",
      "body.add": [
        "userId:$user.userId",
        "username:$user.username",
        "companyCode:$user.companyCode"
      ],
      "header.add": [
        "x-auth-userId:$user.userId",
        "x-auth-companyCode:$user.companyCode",
        "x-policy-owner:individual"
      ]
    }
  ]
}