{
  "name": "friend.request.1.0.0",
  "method": "POST",
  "path": "/friends/request",
  "authentication": true,
  "scope": "friend:write",
  "appkey": true,
  "app_code_vertify": true,
  "body.arg": [
    {
      "name": "toUserId",
      "rules": {
        "required": true
      }
    },
    {
      "name": "content",
      "rules": {
        "maxLength": 120
      }
    }
  ],
  "endpoints": [
    {
      "service": "user",
      "method": "POST",
      "name": "request_friends",
      "type": "http",
      "path": "/friends/request"
    }
  ],
  "request.transformer": [
    {
      "name": "request_friends",
      "body.add": [
        "fromUserId:$user.userId"
      ],
      "header.add": [
        "x-auth-userId:$user.userId",
        "x-auth-username:$user.username",
        "x-auth-companyCode:$user.companyCode",
        "x-auth-fullname:$user.fullname",
        "x-auth-tel:$user.tel",
        "x-auth-mail:$user.mail",
        "x-auth-type:$user.type",
        "x-policy-owner:individual"
      ]
    }
  ]
}