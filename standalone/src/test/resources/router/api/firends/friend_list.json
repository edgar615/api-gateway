{
  "name": "friend.list.1.0.0",
  "method": "GET",
  "path": "/friends",
  "authentication": true,
  "scope": "friend:read",
  "appkey": true,
  "app_code_vertify": true,
  "url.arg": [
    {
      "name": "limit",
      "default_value": 10,
      "rules": {
        "integer": true,
        "max": 100,
        "min": 1
      }
    },
    {
      "name": "start",
      "default_value": 0,
      "rules": {
        "integer": true
      }
    },
    {
      "name": "type",
      "rules": {
        "optional": [
          1,
          2
        ]
      }
    },
    {
      "name": "state",
      "rules": {
        "optional": [
          1,
          2,
          3,
          4
        ]
      }
    }
  ],
  "endpoints": [
    {
      "service": "user",
      "method": "GET",
      "name": "query_friends",
      "type": "http",
      "path": "/friends"
    }
  ],
  "request.transformer": [
    {
      "name": "query_friends",
      "query.add": [
        "fromUserId:$user.userId"
      ],
      "header.add": [
        "x-auth-userId:$user.userId",
        "x-auth-companyCode:$user.companyCode",
        "x-policy-owner:individual"
      ]
    }
  ]
}