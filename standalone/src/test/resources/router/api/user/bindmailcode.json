{
  "name": "user.mail.bindcode.1.0.0",
  "method": "POST",
  "path": "/bindmailcode",
  "authentication": true,
  "appkey": true,
  "app_code_vertify": true,
  "body.arg": [
    {
      "name": "mail",
      "rules": {
        "required": true,
        "maxLength": 60,
        "email": true
      }
    },
    {
      "name": "vertifyCode",
      "rules": {
        "regex": "[0-9]{6}"
      }
    }
  ],
  "endpoints": [
    {
      "service": "user",
      "method": "POST",
      "name": "bindmailcode",
      "type": "http",
      "path": "/users/$user.userId/bindmailcode"
    }
  ],
  "request.transformer": [
    {
      "name": "bindmailcode",
      "body.add": [
        "companyCode:$user.companyCode"
      ],
      "header.add": [
        "x-auth-userId:$user.userId",
        "x-auth-companyCode:$user.companyCode",
        "x-policy-owner:individual"
      ]
    }
  ]
}