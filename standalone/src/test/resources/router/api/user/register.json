{
  "name": "user.register.1.0.0",
  "method": "POST",
  "path": "/register",
  "appkey": true,
  "endpoints": [
    {
      "type": "http",
      "name": "register",
      "service": "user",
      "method": "POST",
      "path": "/users"
    }
  ],
  "body.arg": [
    {
      "name": "username",
      "rules": {
        "required": true
      }
    },
    {
      "name": "password",
      "rules": {
        "required": true
      }
    },
    {
      "name": "vertifyCode",
      "rules": {
        "required": true,
        "fixLength": 6,
        "regex": "[0-9]{6}"
      }
    },
    {
      "name": "accountType",
      "rules": {
        "optional": [
          1,
          2
        ]
      }
    },
    {
      "name": "language",
      "default_value": 1,
      "rules": {
        "optional": [
          1,
          2
        ]
      }
    },
    {
      "name": "areaCode",
      "default_value" : "0086"
    }
  ],
  "request.transformer": [
    {
      "name": "register",
      "body.add": [
        "type:1",
        "companyCode:$var.app.code"
      ]
    }
  ],
  "response.transformer": {
    "body.add": [
      "group:user"
    ]
  },
  "jwt.build": true
}