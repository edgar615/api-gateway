{
  "name": "user.update.1.0.0",
  "method": "PUT",
  "path": "/users/info",
  "authentication": true,
  "appkey": true,
  "app_code_vertify": true,
  "body.arg": [
    {
      "name": "nickname",
      "rules": {
        "maxLength": 16
      }
    },
    {
      "name": "fullname",
      "rules": {
        "maxLength": 16
      }
    },
    {
      "name": "language",
      "default_value": 1,
      "rules": {
        "optional": [
          1,
          2
        ]
      }
    }
  ],
  "endpoints": [
    {
      "service": "user",
      "method": "PUT",
      "name": "user",
      "type": "http",
      "path": "/users/$user.userId/profile"
    }
  ],
  "request.transformer": [
    {
      "name": "user",
      "header.add": [
        "x-auth-userId:$user.userId",
        "x-auth-companyCode:$user.companyCode",
        "x-policy-owner:individual"
      ]
    }
  ]
}