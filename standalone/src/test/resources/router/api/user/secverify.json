{
  "name": "user.security.code.1.0.0",
  "method": "POST",
  "path": "/secverify",
  "authentication": true,
  "appkey": true,
  "app_code_vertify": true,
  "body.arg": [
    {
      "name": "type",
      "rules": {
        "required": true,
        "optional": [
          1,
          2
        ]
      }
    }
  ],
  "endpoints": [
    {
      "service": "user",
      "method": "POST",
      "name": "secverify",
      "type": "http",
      "path": "/users/$user.userId/secverify"
    }
  ],
  "request.transformer": [
    {
      "name": "secverify",
      "header.add": [
        "x-auth-userId:$user.userId",
        "x-auth-companyCode:$user.companyCode",
        "x-policy-owner:individual"
      ]
    }
  ]
}