{
  "name": "user.tel.bindcode.1.0.0",
  "method": "POST",
  "path": "/bindtelcode",
  "authentication": true,
  "appkey": true,
  "app_code_vertify": true,
  "body.arg": [
    {
      "name": "tel",
      "rules": {
        "required": true,
        "maxLength": 11,
        "minLength": 11,
        "regex": "[0-9]{11}"
      }
    },
    {
      "name": "vertifyCode",
      "rules": {
        "regex": "[0-9]{6}"
      }
    },
    {
      "name": "areaCode",
      "default_value" : "0086"
    }
  ],
  "endpoints": [
    {
      "service": "user",
      "method": "POST",
      "name": "bindtelcode",
      "type": "http",
      "path": "/users/$user.userId/bindtelcode"
    }
  ],
  "request.transformer": [
    {
      "name": "bindtelcode",
      "body.add": [
        "companyCode:$user.companyCode"
      ],
      "header.add": [
        "x-auth-userId:$user.userId",
        "x-auth-companyCode:$user.companyCode",
        "x-policy-owner:individual"
      ]
    }
  ]
}