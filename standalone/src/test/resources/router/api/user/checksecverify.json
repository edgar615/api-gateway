{
  "name": "user.security.verify.1.0.0",
  "method": "POST",
  "path": "/checksecverify",
  "authentication": true,
  "appkey": true,
  "app_code_vertify": true,
  "body.arg": [
    {
      "name": "type",
      "rules": {
        "required": true,
        "optional": [
          1,
          2
        ]
      }
    },
    {
      "name": "vertifyCode",
      "rules": {
        "required": true,
        "maxLength": 6,
        "minLength": 6,
        "regex": "[0-9]{6}"
      }
    }
  ],
  "endpoints": [
    {
      "service": "user",
      "method": "POST",
      "name": "checksecverify",
      "type": "http",
      "path": "/users/$user.userId/checksecverify"
    }
  ],
  "request.transformer": [
    {
      "name": "checksecverify",
      "header.add": [
        "x-auth-userId:$user.userId",
        "x-auth-companyCode:$user.companyCode",
        "x-policy-owner:individual"
      ]
    }
  ]
}