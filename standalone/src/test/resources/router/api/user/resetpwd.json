{
  "name": "user.pwd.reset.1.0.0",
  "method": "PUT",
  "path": "/resetpwd",
  "appkey": true,
  "body.arg": [
    {
      "name": "username",
      "rules": {
        "required": true
      }
    },
    {
      "name": "newPwd",
      "rules": {
        "required": true
      }
    },
    {
      "name": "vertifyCode",
      "rules": {
        "required": true,
        "maxLength": 6,
        "minLength": 6,
        "regex": "[0-9]{6}"
      }
    }
  ],
  "endpoints": [
    {
      "service": "user",
      "method": "PUT",
      "name": "resetpwd",
      "type": "http",
      "path": "/users/resetpwd"
    }
  ],
  "request.transformer": [
    {
      "name": "resetpwd",
      "header.add": [
        "x-auth-userId:$user.userId",
        "x-auth-companyCode:$user.companyCode",
        "x-policy-owner:individual"
      ]
    }
  ]
}