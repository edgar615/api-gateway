{
  "name": "user.pwd.change.1.0.0",
  "method": "PUT",
  "path": "/changepwd",
  "authentication": true,
  "appkey": true,
  "app_code_vertify": true,
  "body.arg": [
    {
      "name": "oldPwd",
      "rules": {
        "required": true
      }
    },
    {
      "name": "newPwd",
      "rules": {
        "required": true
      }
    }
  ],
  "endpoints": [
    {
      "service": "user",
      "method": "PUT",
      "name": "changepwd",
      "type": "http",
      "path": "/users/$user.userId/changepwd"
    }
  ],
  "request.transformer": [
    {
      "name": "changepwd",
      "body.add": [
        "userId:$user.userId"
      ],
      "header.add": [
        "x-auth-userId:$user.userId",
        "x-auth-companyCode:$user.companyCode",
        "x-policy-owner:individual"
      ]
    }
  ]
}