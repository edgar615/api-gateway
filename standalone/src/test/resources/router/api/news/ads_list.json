{
  "name": "ads.list.1.0.0",
  "method": "GET",
  "path": "/ads",
  "appkey": true,
  "url.arg": [
    {
      "name": "limit",
      "default_value": 10,
      "rules": {
        "integer": true,
        "max": 100,
        "min": 1
      }
    },
    {
      "name": "start",
      "default_value": 0,
      "rules": {
        "integer": true
      }
    },
    {
      "name": "language",
      "default_value": 1,
      "rules": {
        "integer": true
      }
    }
  ],
  "endpoints": [
    {
      "service": "news",
      "method": "GET",
      "name": "greetings",
      "type": "http",
      "path": "/greetings"
    },
    {
      "service": "news",
      "method": "GET",
      "name": "bannerAds",
      "type": "http",
      "path": "/ads"
    },
    {
      "service": "news",
      "method": "GET",
      "name": "loadingAds",
      "type": "http",
      "path": "/ads"
    }
  ],
  "request.transformer": [
    {
      "name": "greetings",
      "query.add": [
        "companyCode:$var.app.code",
        "state:2"
      ]
    },
    {
      "name": "bannerAds",
      "query.add": [
        "type:2",
        "companyCode:$var.app.code",
        "state:2"
      ]
    },
    {
      "name": "loadingAds",
      "query.add": [
        "type:1",
        "companyCode:$var.app.code",
        "state:2"
      ]
    }
  ]
}