{
  "name": "backend.sign.create.1.0.0",
  "method": "POST",
  "path": "/backend/code",
  "scope": "backend:token",
  "appkey": true,
  "endpoints": [
    {
      "type": "http",
      "name": "sms.send",
      "service": "sms",
      "method": "POST",
      "path": "/sms"
    }
  ],
  "body.arg": [
    {
      "name": "username",
      "rules": {
        "required": true
      }
    }
  ],
  "request.transformer": [
    {
      "name": "sms.send",
      "body.add": [
        "tel:$body.username",
        "code:$var.backend.code"
      ]
    }
  ],
  "response.transformer": {
    "body.add": [
      "sign:$var.backend.sign"
    ]
  },
  "backend.code": true
}