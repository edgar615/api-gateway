{
  "name": "user_login",
  "method": "POST",
  "path": "/login",
  "scope": "user:write",
  "endpoints": [
    {
      "type": "http",
      "name": "user_login",
      "service": "user",
      "method": "POST",
      "path": "/login"
    }
  ],
  "body.arg": [
    {
      "name": "username",
      "rules": {
        "required": true
      }
    },
    {
      "name": "password",
      "rules": {
        "required": true
      }
    },
    {
      "name": "channelId",
      "rules": {
        "required": true
      }
    },
    {
      "name": "deviceType",
      "rules": {
        "optional": [
          3,
          4
        ]
      }
    }
  ],
  "request.transformer": [
  {
    "name": "user_login",
    "body.add": [
      "type:1"
    ]
  }
],
  "response.transformer": {
    "body.add": [
      "role:user"
    ]
  },
  "jwt.build": true
}