{
  "name": "api.list.1.0.0",
  "method": "GET",
  "path": "/api",
  "scope": "api:read",
  "url.arg": [
    {
      "name": "limit",
      "default_value": 10,
      "rules": {
        "integer": true,
        "max": 100,
        "min": 1
      }
    },
    {
      "name": "start",
      "default_value": 0,
      "rules": {
        "integer": true
      }
    },
    {
      "name": "namespace",
      "rules": {
        "required": true
      }
    },
    {
      "name": "name"
    }
  ],
  "endpoints": [
    {
      "policy": "req-resp",
      "name": "query.api",
      "type": "eventbus",
      "address" : "api.list"
    }
  ],
  "request.transformer": [
    {
      "name": "query.api",
      "body.add" : [
        "start:$query.start",
        "limit:$query.limit",
        "name:$query.name",
        "namespace:$query.namespace"
      ]
    }
  ]
}