{
  "name": "body.arg.test",
  "method": "POST",
  "path": "/arg/body",
  "body.arg": [
    {
      "name": "limit",
      "default_value": 10,
      "rules": {
        "integer": true,
        "max": 100,
        "min": 1
      }
    },
    {
      "name": "start",
      "default_value": 0,
      "rules": {
        "integer": true
      }
    },
    {
      "name": "deviceType",
      "rules": {
        "required": true
      }
    }
  ],
  "endpoints": [
    {
      "name": "ping",
      "type": "dummy",
      "result" : {
        "limit" : "$body.limit",
        "start" : "$body.start"
      }
    }
  ]
}