{
  "name": "backend.code",
  "method": "POST",
  "path": "/backend/code",
  "scope": "backend:token",
  "appkey" : true,
  "endpoints": [
    {
      "type": "dummy",
      "name" : "backend",
      "result" : {
      }
    }
  ],
  "body.arg": [
    {
      "name": "username",
      "rules": {
        "required": true
      }
    }
  ],
  "request.transformer": [
    {
      "name": "backend",
      "body.add": [
        "code:$var.backend.code"
      ]
    }
  ],
  "response.transformer": {
    "body.add": [
      "sign:$var.backend.sign",
      "code:$var.backend.code"
    ]
  },
  "backend.code": true
}